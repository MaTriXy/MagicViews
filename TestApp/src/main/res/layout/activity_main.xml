<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.ivankocijan.TestApp.activites.MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

        <!-- The below button uses the default typeFace -->
        <com.ivankocijan.magicviews.views.MagicButton
                android:text="@string/preference_example"
                android:id="@+id/preference_example"
                android:padding="@dimen/padding"
                android:textSize="@dimen/text_size"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        <com.ivankocijan.magicviews.views.MagicButton
                android:text="@string/layout_example"
                android:id="@+id/layout_example"
                android:padding="@dimen/padding"
                android:textSize="@dimen/text_size"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:typeFace="open_sans_semi_bold.ttf"/>

        <com.ivankocijan.magicviews.views.MagicButton
                android:text="@string/code_example"
                android:id="@+id/code_example"
                android:padding="@dimen/padding"
                android:textSize="@dimen/text_size"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:typeFace="open_sans_semi_bold.ttf"/>

    </LinearLayout>


</ScrollView>
